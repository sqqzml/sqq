<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout android:layout_height="80dp" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="《" android:textSize="30dp" android:gravity="center_vertical" android:layout_marginTop="10dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="460dp" android:gravity="center_vertical" android:layout_marginTop="10dp" android:hint="输入商品名字" android:layout_marginLeft="30dp"/>

    <TextView android:background="@drawable/line" android:layout_height="46dp" android:layout_width="46dp" android:id="@+id/qiehuan"/>

</LinearLayout>

    <View android:background="#ccc" android:layout_height="2dp" android:layout_width="match_parent"/>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginTop="8dp" android:layout_marginBottom="8dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="综合" android:textSize="20dp" android:gravity="center_horizontal" android:id="@+id/zonghe" android:layout_weight="1"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="销量" android:textSize="20dp" android:gravity="center_horizontal" android:id="@+id/xiaoliang" android:layout_weight="1"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="价格" android:textSize="20dp" android:gravity="center_horizontal" android:id="@+id/jiage" android:layout_weight="1"/>

</LinearLayout>

    <View android:background="#ccc" android:layout_height="2dp" android:layout_width="match_parent" android:layout_marginBottom="5dp"/>

    <com.jcodecraeer.xrecyclerview.XRecyclerView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/xrcycler"/>

</LinearLayout>